{
  "bracketSpacing": false,
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": true,
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "printWidth": 100,
        "trailingComma": "es5",
        "arrowParens": "always"
      }
    },
    {
      "files": "*.json",
      "options": {"tabWidth": 2, "useTabs": false}
    }
  ]
}
